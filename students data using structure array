#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks[6];
};

void input(struct Student s[], int n) {
    for (int i = 0; i < n; i++) {
        printf("\nEnter details of student %d:\n", i + 1);

        printf("Roll Number: ");
        scanf("%d", &s[i].roll);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Enter marks of 6 subjects:\n");
        for (int j = 0; j < 6; j++) {
            printf("Subject %d: ", j + 1);
            scanf("%f", &s[i].marks[j]);
        }
    }
}

void display(struct Student s[], int n) {
    printf("\n\n------ STUDENT DETAILS ------\n");
    for (int i = 0; i < n; i++) {
        printf("\nStudent %d:\n", i + 1);
        printf("Roll Number: %d\n", s[i].roll);
        printf("Name: %s\n", s[i].name);

        printf("Marks: ");
        for (int j = 0; j < 6; j++) {
            printf("%.2f ", s[i].marks[j]);
        }
        printf("\n");
    }
}

int main() {
    int n;
    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    input(s, n);
    display(s, n);

    return 0;
}
